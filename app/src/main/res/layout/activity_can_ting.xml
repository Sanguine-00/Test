<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinnerBuildingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/building_id"></android.support.v7.widget.AppCompatSpinner>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinnerKeyWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/keyword"></android.support.v7.widget.AppCompatSpinner>
    </LinearLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.Android.com/apk/res-auto"
        android:id="@+id/pull_refresh_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/navagation_list_anim"
        >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>


</LinearLayout>
